{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string"
		},
		"mods": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"description": "Unique identifier for this mod. Must be globally unique within all mods from all loaders."
					},
					"engine": {
						"type": "string",
						"enum": [
							"Unity",
							"Unreal",
							"Godot"
						],
						"description": "Game engine that this mod supports."
					},
					"unityBackend": {
						"type": "string",
						"enum": [
							"Il2Cpp",
							"Mono"
						],
						"description": "Only relevant if engine=Unity. Scripting backend used by the game."
					},
					"title": {
						"type": "string",
						"description": "Mod's display name."
					},
					"author": {
						"type": "string",
						"description": "Mod author."
					},
					"sourceCode": {
						"type": "string",
						"format": "uri",
						"description": "URL of a repository with the mod's source code."
					},
					"description": {
						"type": "string",
						"description": "Short description that explains what the mod does."
					},
					"downloads": {
						"type": "array",
						"description": "List of downloadable mod releases.",
						"items": {
							"type": "object",
							"properties": {
								"version": {
									"type": "string",
									"description": "String that uniquely identifies this release."
								},
								"url": {
									"type": "string",
									"format": "uri",
									"description": "Direct download url for the release zip"
								},
								"root": {
									"type": "string",
									"description": "Optional, path of the root folder within the zip."
								}
							},
							"required": [
								"version",
								"url"
							]
						}
					}
				},
				"additionalProperties": false,
				"required": [
					"id",
					"title",
					"author",
					"sourceCode",
					"description",
					"downloads"
				]
			}
		}
	},
	"required": [
		"$schema",
		"mods"
	]
}